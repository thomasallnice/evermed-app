# Local Postgres (used in CI and local dev for Prisma)
# Supabase Cloud (dev)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
# Optional: direct DB URL for Prisma migrations in CI
SUPABASE_DB_URL=

# External API Integration (Sprint 2 - AI Intelligence)
# Google Cloud Vertex AI - Gemini 2.5 Flash for food analysis (RECOMMENDED)
# Project ID: evermed-ai-1753452627
GOOGLE_CLOUD_PROJECT=evermed-ai-1753452627
# For local development: Use GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# For Vercel/serverless: Use GOOGLE_APPLICATION_CREDENTIALS_JSON=<base64-encoded-json>
# GOOGLE_APPLICATION_CREDENTIALS_JSON=
USE_GEMINI_FOOD_ANALYSIS=false

# OpenAI API - Current food analysis implementation (GPT-4o, fallback)
OPENAI_API_KEY=

# Google Cloud Vision API - Legacy (not recommended for food recognition)
GOOGLE_VISION_API_KEY=

# Nutritionix API - Nutrition database and food search
NUTRITIONIX_APP_ID=
NUTRITIONIX_APP_KEY=

# Development/Testing
# Set to 'true' to use mock API implementations instead of real APIs
USE_MOCK_APIS=false
